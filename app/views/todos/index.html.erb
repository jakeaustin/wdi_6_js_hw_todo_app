
<div class="container-fluid text-center">
  <div class="row">
    <form id="todo-form">
      <input type="text" placeholder="What do you have to do?" id="todo-field">
      <input type="submit" value="Do it!">
    </form>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h1>Todo</h1>
      <ol id="todos-list">
        <button class="create-sort">By date</button>
        <button class="name-sort">By name</button>
      </ol>
    </div>

    <div class="col-md-4 col-md-offset-4">
     <h1>Done</h1>
     <ol id="todones-list">
      <button class="create-sort">By date</button>
      <button class="name-sort">By name</button>
    </ol>
    </div>
  </div>
</div>
