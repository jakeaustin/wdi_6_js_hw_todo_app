<div class="container">
  <h1 class="text-center">Can Do!</h1>
  <div id="todo-input" class="row">
    <div class="col-md-6 col-md-offset-3">
      <form id="new-todo">
        <div class="input-group">
          <input id="new-todo-name" type="text" class="form-control" placeholder="Enter a new todo item..." autocomplete="off">
          <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">Create</button>
          </span>
        </div>
      </form>
    </div>
  </div>
  <div id="todo-lists" class="row">
    <div class="col-md-6">
      <div class="panel panel-info">
        <div class="panel-heading"><h4>Todo</h4></div>
        <table id="todo-list-pending" class="table">
        </table>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-success">
        <div class="panel-heading"><h4>Done</h4></div>
        <table id="todo-list-completed" class="table">
        </table>
      </div>
    </div>
  </div>
</div>
